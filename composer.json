{
  "name": "apie/apie-phpstan-rules",
  "description": "Composer package of the apie library: apie phpstan rules",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pieter Jordaan",
      "email": "pieter_jordaan@hotmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Apie\\ApiePhpstanRules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Apie\\Tests\\ApiePhpstanRules\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3",
    "apie/core": "self.version"
  },
  "require-dev": {
    "nikic/php-parser": "^5.3.1",
    "phpunit/phpunit": "^11.5.2",
    "phpspec/prophecy-phpunit": "^2.2",
    "phpstan/phpstan": "^2.0.4"
  },
  "extra": {
    "phpstan": {
      "includes": [
        "apie-phpstan-rules.neon"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}